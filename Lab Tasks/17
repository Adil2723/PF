#include<stdio.h>
int main () {
    int input= 0;
    int sum = 0;
    
    do{
        printf("Enter a number: ");
        scanf("%d", &input);
        
        if ( input != 0){
             sum += input;
          printf("Current sum: %d\n", sum);
         }
     } while(input != 0);
     
        printf("Enter final sum: %d\n", sum);
        return 0;
        }
