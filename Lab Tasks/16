#include <stdio.h>

int main() {
    int age;
    float income;
    int creditScore;
    int eligible;

    printf("Enter your age: ");
    scanf("%d", &age);

    printf("Enter your monthly income: ");
    scanf("%f", &income);

    printf("Enter your credit score: ");
    scanf("%d", &creditScore);

    eligible = (age >= 18) && (income >= 3000) && (creditScore >= 650);

    if (eligible) {
        printf("You are eligible for the loan.\n");
    } else {
        printf("You are not eligible for the loan.\n");
    }

    return 0;
}
